div.navbar.navbar-default.navbar-static-top(ng-controller='NavbarCtrl')
  div.container
    div.navbar-header 
      button.navbar-toggle(type='button', ng-click='isCollapsed = !isCollapsed')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
      // /span.icon-bar
      // /a.navbar-brand(href='')

    div#navbar-main.navbar-collapse.collapse(collapse='isCollapsed')
      ul.nav.navbar-nav
        li(ng-repeat='item in menu', ng-class='{active: isActive(item.link)}')

        <a href=#><img class="main_logo" ng-src="assets/images/which_method_logo.png"/></a>

        li(ng-show='isAdmin()', ng-class='{active: isActive("/admin")}')
          a(href='/admin') Admin

      ul.nav.navbar-nav.navbar-right
        li(ng-hide='isLoggedIn()', ng-class='{active: isActive("/login")}')
          // a(href='/login') Log In
          // a(href='/login') Log in
          a.button.btn-lg.btn-warning.navbar-btn.main_signin_btn(href='/login') Log In

      ul.nav.navbar-nav.navbar-right
        li(ng-hide='isLoggedIn()', ng-class='{active: isActive("/signup")}')
          // a(href='/signup') Sign up
          // a.btn.btn-primary.btn-xs(href='/signup') Sign up
          // a.button.btn.btn-success.navbar-btn(href='/signup') Sign up
          // a.button.btn.btn-warning-lg.navbar-btn(type='button') Sign in
          a.button.btn-lg.btn-warning.navbar-btn.main_signin_btn(href='/signup') Start Now

          //#google_translate_element
          script(type='text/javascript').
            function googleTranslateElementInit() {
            new google.translate.TranslateElement({pageLanguage: 'en', includedLanguages: 'en,es'}, 'google_translate_element');
            }
          script(type='text/javascript', src='//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit')
        
        li(ng-show='isLoggedIn()')
          p.navbar-text Hello {{ getCurrentUser().name }}

        li(ng-show='isLoggedIn()')
          a.button.btn.btn-warning.navbar-btn(ng-click="$root.showSettings=!$root.showSettings") Settings


        //li(ng-show='isLoggedIn()', ng-class='{active: isActive("/settings")}')
          a(href='/settings')
            span.glyphicon.glyphicon-cog

        li(ng-show='isLoggedIn()', ng-class='{active: isActive("/logout")}')
          a.button.btn.btn-warning.navbar-btn(href='', ng-click='logout()') Logout

