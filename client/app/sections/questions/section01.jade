header
  #logo
    .col-xs-6 
    a(href="landing_01.html")
      img.logo_img(src="assets/images/which_method_logo.png", alt="")
  #menu
    .col-xs-6
    a.btn.btn-primary(ng-click='logout()') 
      span(lang='en') Log out
      span(lang='es') Salir
  br
  br
#container-top
  h3 
    span(ng-show="language=='en'") WhichMethod Section 1 
    span(ng-show="language=='es'") WhichMethod Sección 1
    span.glyphicon.glyphicon-play(style='color:#986698')
  br
  br
#container
  .body.questionpages
  br
  br
  ul
    #q1(ng-show="currentQuestion == 'q1'")
      label
        span(lang='en') Q1. How old are you?
        span(lang='es') Q1. ¿Cuántos años tienes?
      form(name="age")
        input(ng-model='questions.q1.textInput' name="input" type='number' min='14', max='140' required)        
        span.error(ng-show="age.input.$error.min") 
          span(lang='en') You must at least be 14 years of age!
          span(lang='es') ¡Usted debe de tener al menos 14 años de edad!
        span.error(ng-show="age.input.$error.max") 
          span(lang='en') This survey is not relevant for this age!
          span(lang='es') Esta encuesta no es relevante para esta edad!
        span.error(ng-show="age.input.$error.number") 
          span(lang='en') Not valid number!
          span(lang='es') No número válido!
        br
        br
        br
        input(lang="en",type="submit", ng-disabled="age.$invalid" ng-click="saveAnswers()", value="Continue")
        input(lang="es",type="submit", ng-disabled="age.$invalid" ng-click="saveAnswers()", value="Continuar")
        label.choice(ng-if="language=='en'") {{option.name}}
        label.choice(ng-if="language=='es'") {{option.nameES}}


    #q2(ng-show="currentQuestion == 'q2'")
      label
        span(ng-show="language=='en'") Q2. How much do you weigh "lbs."?
        span(ng-show="language=='es'") Q2. ¿Cuánto pesa "lbs."?
      form(name="weight")
        input(ng-model='questions.q2.textInput' required type='number', tabindex='1')
        div(ng-repeat='option in questions.q2.options')
          input(type="radio" name='q2' ng-model="questions.q2.selectedOption" ng-value="{{option}}")
          label.choice {{option.name}}
        br
        br
        br
        input(lang="en",type="submit" ng-disabled="weight.$invalid" ng-click="saveAnswers()", value="Continue")
        input(lang="es",type="submit" ng-disabled="weight.$invalid" ng-click="saveAnswers()", value="Continuar")


    #q3(ng-show="currentQuestion == 'q3'")
      label
        span(ng-show="language=='en'") Q3. How often do you smoke cigarettes or cigars or use smokeless tobacco?
        span(ng-show="language=='es'") Q3. ¿Con que frecuencia fuma usted cigarrillos, cigarros o usa usted tabaco sin humo?
        div
          div(ng-repeat='option in questions.q3.options')
            input(type="radio" name='q3' ng-change="saveAnswers()" ng-model="questions.q3.selectedOption" ng-value="{{option}}")
            label.choice(ng-if="language=='en'") {{option.name}}
            label.choice(ng-if="language=='es'") {{option.nameES}}

