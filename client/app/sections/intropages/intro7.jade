header
  #logo
      a(href="landing_07.html")
      .col-md-6
      img.logo_img(src="assets/images/which_method_logo.png", alt="")
  #menu
      .col-md-6
      a.btn.btn-primary.btn-lg(ng-click='logout()') 
        span(lang='en') Log out
        span(lang='es') Salir

section
    #main_content
    .col-xs-6
      .responsive-container
        .dummy
          .img-container
            img.img-rounded.img-responsive(src='assets/images/woman_mobile-phone.png', alt='Responsive image', width='604', height='536')
    .col-xs-6
      .responsive-container
        .content-container
          h2.media-heading 
            span(lang='en') Questions 54a-54e
            span(lang='es') Preguntas 54a-54e
          br
          p.lead 
            span(lang='en') Last step - it's time to give your opinion!
            span(lang='es') ¡Último paso --  es tiempo para que usted de su opinión!
          p.lead 
            span(lang='en') What do you think about the following birth control methods?
            span(lang='es') ¿Qué piensa sobre los siguientes métodos anticonceptivos?
          br
          a.btn.btn-default.btn-md(href='/questions/section/7', role='button')
            span(lang='en') Continue
            span(lang='es') Continuar
          label.choice(ng-if="language=='en'") {{option.nameEN}}
          label.choice(ng-if="language=='es'") {{option.nameES}}

